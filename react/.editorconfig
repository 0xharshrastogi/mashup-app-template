# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
end_of_line = lf

# TypeScript and TypeScript JSX files
[*.ts]
indent_style = tab
indent_size = 4

[*.tsx]
indent_style = tab
indent_size = 4
